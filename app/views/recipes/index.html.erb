<div class="row mt-3">
</div>
<% @supported_recipes.each do |key, recipe| %>
  <div class="row mt-3">
    <div class="col-3">
      <h3 class="float-right">ingredient:</h3>
    </div>
    <div class="col-4">
      <h3><%= recipe[:ingredient] %></h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      <h3 class="float-right">recipe:</h3>
    </div>
    <div class="col-4">
      <h3><%= recipe[:name] %></h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
    <%= image_tag(
      recipe[:image],
      alt: recipe[:name],
      style: "max-width: 300px; max-height: 300px;",
      class: "float-right",
    )%>
    </div>
    <div class="col-4">
      <pre><%= recipe[:ingredients] %></pre>
    </div>
  </div>
<% end %>